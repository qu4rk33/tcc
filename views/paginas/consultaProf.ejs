<html lang="pt">
<head>
    <% include ../partes/head %>
    <script>
    $(function pesqDisciplina(){

             $.post("/pesqDisc",function(data){
                $("#disciplina").empty();
                $("#disciplina").append($("<option disable selected />").val('Disciplina').text('Disciplina'));

               for(var i = 0; i < data.length; i++) {
