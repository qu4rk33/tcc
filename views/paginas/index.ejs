<body ng-controller="sgeCtrl as vm">
    <div class="all">

        <div class="topo row  ">
                <% include ../partes/topmenu.ejs %>
        </div>
          <div class="row">
              <div class=" col-xs-2 col-sm-2 col-md-2 col-lg-2 fixed">
                  <% include ../partes/sidemenu.ejs %>
              </div>
        <div class="container-fluid">
        
              <div class="content col-xs-10 col-sm-10 col-md-10 col-lg-10 ">
                
              {{vm.events}}
              <div class="calendar">
  
                <br>
                <div class="row">

                      <div class="col-md-6 text-center">
                        <div class="btn-group">

                          <button
                            class="btn btn-primary btn-sm"
                            mwl-date-modifier
                            date="vm.viewDate"
                            decrement="vm.calendarView">
                            Ontem
                          </button>
                          <button
                            class="btn btn-default btn-sm"
                            mwl-date-modifier
                            date="vm.viewDate"
                            set-to-today>
                            Hoje
                          </button>
                          <button
                            class="btn btn-primary btn-sm"
                            mwl-date-modifier
                            date="vm.viewDate"
                            increment="vm.calendarView">
                            Amanhã
                          </button>
                        </div>
                      </div>

                      <br class="visible-xs visible-sm">

                      <div class="col-md-6 text-center">
                        <div class="btn-group">
                          <label class="btn btn-primary btn-sm" ng-model="vm.calendarView" uib-btn-radio="'year'">Ano</label>
                          <label class="btn btn-primary btn-sm" ng-model="vm.calendarView" uib-btn-radio="'month'">Mês</label>
                          <label class="btn btn-primary btn-sm" ng-model="vm.calendarView" uib-btn-radio="'week'">Semana</label>
                          <label class="btn btn-primary btn-sm" ng-model="vm.calendarView" uib-btn-radio="'day'">Dia</label>
                        </div>
                      </div>

                    </div>
                
                
                    <mwl-calendar
                      events="vm.events"
                      view="vm.calendarView"
                      view-date="vm.viewDate">
                    </mwl-calendar>
                  </div>
              

              <div id="addEvento">
              <!--button class="btn btn-danger btn-block butao">Sair</button-->

                <div class="container">
                  <form>
                    <div class="form-group form-inline">
                      <label for="Evento">Evento:</label>
                      <input type="text" class="form-control" ng-model="addEvento.title" placeholder="Ex: Feira de livro">
                    </div>
                    <div class="form-group form-inline">
                      <label for="data">Data:</label> <input type="datetime-local" ng-model="addEvento.startsAt" class="form-control">
                      <!--label for="hora">Hora:</label> <input type="time" ng-model="addEvento.hora" class="form-control"-->
                    </div>

                    <button type="submit" class="btn btn-default" ng-click="addEventoCalendario(addEvento)">Cadastrar</button>
